<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WenPrj</title>
    
    <link href="~/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/images/favicon.png" type="">
    @await RenderSectionAsync("Style", required: false)
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="List"><i class="fa-solid fa-tape">&nbsp;</i>回首頁</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#links">              
                    <span class="navbar-toggler-icon"></span>                   
            </button>
            <div class="collapse navbar-collapse" id="links">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"> <a class="nav-link text-white" asp-area="" asp-controller="product" asp-action="searchkeyword"><i class="fa-solid fa-magnifying-glass"></i></i>&nbsp;搜尋</a></li>
                    <li class="nav-item active"><a class="nav-link text-white" asp-area="" asp-controller="product" asp-action="Index"><i class="fa-solid fa-store"></i>&nbsp;商品清單</a></li>
                    <li class="nav-item"> <a class="nav-link text-white" asp-area="" asp-controller="product" asp-action="card"><i class="fa-solid fa-cart-arrow-down"></i>&nbsp;加入購物車</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white footer text-muted">
        <div class="container">
            &copy; 2022 - WenProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
