                @Html.DisplayFor(modelItem => item.商品名稱productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.商品價格productPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.商品圖片image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.商品圖片路徑imagePath)
